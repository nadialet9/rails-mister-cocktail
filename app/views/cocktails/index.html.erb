

<div class="container">

<h1 class="text-center mb-9"> Wich cocktail do you want to try ? </h1>

  <%= link_to("Create", new_cocktail_path) %>

  <div class="row d-flex flex-wrap justify-content-around">

      <% @cocktails.each do |cocktail| %>
        <div class="card col-3 pb-4 m-2"  >
          <div>
            <%= cl_image_tag cocktail.photo.key, height: 300, width: 220, crop: :fill %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to(cocktail.name, cocktail_path(cocktail)) %></h5>
          </div>

          <a class="btn btn-primary" href="<%= cocktail_path(cocktail) %>"> Go to Cocktail üç∏ </a>
        </div>
      <% end %>
    </div>

</div>
